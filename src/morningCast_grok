<style>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&family=Playfair+Display&display=swap');
  
  body {
    margin: 0; padding: 0;
    min-height: 100vh;
    background: linear-gradient(135deg, #1a0033, #330066, #660033);
    color: #f0e6ff;
